class Solution {
    public int majorityElement(int[] nums) {
        return getMajority(nums, 0, nums.length - 1);
    }

    private int getMajority(int[] nums, int l, int r){
        if(l == r) {
            return nums[l];
        }
        int mid = l + (r - l) / 2;
        int leftmajority = getMajority(nums, l, mid);
        int rightmajority = getMajority(nums, mid + 1, r);

        if(leftmajority == rightmajority){
            return leftmajority;
        }

        int leftcount = countInRange(nums, leftmajority, l, r);
        int rightcount = countInRange(nums, rightmajority, l, r);

        return leftcount > rightcount ? leftmajority : rightmajority;
    }

    private int countInRange(int nums[], int majority, int l, int r){
        int count = 0;
        for(int i = l; i <= r; i++){
            if(nums[i] == majority){
                count++;
            }
        }
        return count;
    }
}
