class Solution {
    public List<List<Integer>> combine(int n, int k) {
        List<List<Integer>> result = new ArrayList<>();
        backtrack(n, k, 1, result, new ArrayList<>());
        return result;
    }
    
    private void backtrack(int n, int k, int level, List<List<Integer>> result, ArrayList<Integer> temp){
        if(k == 0){
            result.add(new ArrayList<>(temp));
            return;
        }
        for(int i = level; i <= n - k + 1; i++){
            temp.add(i);
            backtrack(n, k - 1, i + 1, result, temp);
            temp.remove(temp.size() - 1);
        }
    }
}


// result的定义也可以改进一下写法：
// 把两个函数里的所有的result定义合并提取到开头定义：
// private List<List<Integer>> result = new ArrayList<>();
