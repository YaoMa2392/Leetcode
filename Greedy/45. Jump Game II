class Solution {
    // 时间复杂度: O(n^2)
    // 空间复杂度: O(1)
    public int jump(int[] nums) {
        int position = nums.length - 1; // 最终要到达的位置
        int steps = 0;
        while(position > 0){
            for(int i = 0; i < nums.length; i++){
                if(i + nums[i] >= position){
                    position = i;
                    steps++;
                    break;
                }
            }
        }
        return steps;
    }
}

// 从后往前倒推

------------------------------------------------------------------------

class Solution {
    public int jump(int[] nums) {
        // 时间复杂度：O(n)
        // 空间复杂度：O(1)
        int maxPosition = 0;
        int end = 0;
        int steps = 0;
        for(int i = 0; i < nums.length - 1; i++){  //不访问最后一个元素
            maxPosition = Math.max(maxPosition, i + nums[i]);
            if(i == end){
                end = maxPosition;
                steps++;
            }
        }   
        return steps;
    }
}

// 正向
